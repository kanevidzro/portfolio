---
import FormattedDate from '../components/FormattedDate.astro'

const { title, date, slug } = Astro.props
---

<a href={`/writings/${slug}`} class="group block">
  <article class="flex w-full items-center justify-between py-2">
    <h3
      class="text-base font-medium transition-colors group-hover:text-orange-500">
      {title}
    </h3>

    <p class="font-medium text-gray-500 dark:text-gray-400">
      <FormattedDate date={date} />
    </p>
  </article>
</a>
