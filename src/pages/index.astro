---
import Layout from '../layouts/Layout.astro'
import { HOME, SOCIALS, projects, education } from '../consts'
import EducationCard from '../components/EducationCard.astro'
---

<Layout title={HOME.TITLE} description={HOME.DESCRIPTION}>
  <section>
    <h1
      class="w-full pb-6 text-start text-[min(10vw,48px)] leading-[0.9] font-medium tracking-[-2px] sm:tracking-[-4px]">
      Kane Vidzro,<br />
      <span class="text-gray-500 dark:text-gray-400">
        I build things for the web
      </span>
    </h1>

    <p class="mb-6 text-lg text-gray-700 dark:text-gray-300">
      I am a 17-year-old developer exploring code, ideas, and tools that make
      life easier. At
      <a
        href="https://xtottel.com"
        target="_blank"
        class="underline underline-offset-2 hover:text-gray-900 dark:hover:text-gray-100">
        Xtottel
      </a>, I focus on creating scalable SaaS products for Africa.
    </p>

    <!-- Projects -->
    <h2 class="mb-3 text-xl font-semibold">Some projects I am working on</h2>

    <div class="mb-6 flex flex-wrap gap-3">
      {
        projects.map((project) => (
          <a
            href={project.url}
            target="_blank"
            class="flex flex-wrap items-center justify-center gap-1 rounded-full bg-gray-100 p-1 transition-all duration-300 hover:scale-105 hover:rotate-1 hover:bg-gray-200 dark:bg-[#1F1F1F] dark:hover:bg-[#2F2F2F]">
            <img src={project.image} alt={project.name} class="size-8" />
            <span class="mr-2">{project.name}</span>
          </a>
        ))
      }
    </div>

    <p class="mb-5 text-lg text-gray-700 dark:text-gray-300">
      I enjoy building APIs, infrastructure, and simple tools that work fast and
      reliably.
    </p>

    <!-- Education -->
    <section class="mb-12">
      <h2 class="mb-4 text-xl font-semibold">Education</h2>
      <div class="flex flex-col gap-4">
        {education.map((item) => <EducationCard {...item} />)}
      </div>
    </section>

    <!-- Socials -->
    <div class="flex flex-row gap-6">
      {
        SOCIALS.map((SOCIAL) => (
          <a
            href={SOCIAL.URL}
            target="_blank"
            class="text-lg font-medium text-gray-700 transition-colors hover:text-gray-900 dark:text-gray-300 dark:hover:text-gray-100">
            {SOCIAL.NAME}
          </a>
        ))
      }
    </div>
  </section>
</Layout>
